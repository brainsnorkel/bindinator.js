{
  "name": "@tonioloewald/b8r",
  "version": "0.2.1",
  "description": "the even lazier javascript framework",
  "main": "dist/b8r.js",
  "scripts": {
    "server": "node utils/server.js web_root:.",
    "lint": "node node_modules/standard/bin/cmd.js --fix",
    "build": "rollup source/b8r.js --dir dist --format esm --inlineDynamicImports true && uglifyjs dist/b8r.js -c -m > dist/b8r.min.js"
  },
  "keywords": [
    "javascript",
    "front end",
    "html",
    "mvc",
    "framework"
  ],
  "files": [
    "css/*",
    "dist/*",
    "lib/*",
    "components/*",
    "web-components/*",
    "/third-party/",
    "/utils/"
  ],
  "author": "Tonio Loewald (https://bindinator.com)",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "eslint": "^5.13.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "ignore": [
      "/icomoon/",
      "/test/",
      "/dist/",
      "/third-party/"
    ]
  }
}
